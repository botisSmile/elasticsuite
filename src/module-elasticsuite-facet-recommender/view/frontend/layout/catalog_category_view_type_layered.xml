<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sidebar.main">
            <block class="Magento\Framework\View\Element\Template"
                   name="catalog.navigation.recommender"
                   as="catalog.navigation.recommender"
                   before="catalog.leftnav"
                   template="Smile_ElasticsuiteFacetRecommender::layer/filter/recommender.phtml"
            >
                <arguments>
                    <argument name="view_model" xsi:type="object">Smile\ElasticsuiteFacetRecommender\ViewModel\Navigation\FilterRecommender</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="catalog.leftnav" destination="sidebar.main" after="catalog.navigation.recommender"/>
    </body>
</page>