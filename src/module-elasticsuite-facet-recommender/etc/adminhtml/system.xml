<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="smile_elasticsuite_facet_recommender" translate="label" type="text" sortOrder="10000" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Facets Recommender</label>
            <tab>smile_elasticsuite</tab>
            <resource>Magento_Catalog::config_smile_elasticsuite_core_base_settings</resource>

            <group id="general" translate="label" type="text" sortOrder="10000" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Facets Recommendations</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enabled</label>
                    <comment>When enabled, facets regularly used by a customer for a given category will be recommended to him. Elasticsuite tracking must also be enabled.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="max_number" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Max number of facets to recommend</label>
                    <frontend_class>validate-number</frontend_class>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>