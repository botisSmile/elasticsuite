<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!-- List of actions not allowed for optimizers linked to a campaign. -->
    <event name="controller_action_predispatch_smile_elasticsuite_catalog_optimizer_optimizer_save">
        <observer name="restrain_optimizer_action" instance="Smile\ElasticsuiteAbCampaign\Observer\RestrainOptimizerActions" />
    </event>
    <event name="controller_action_predispatch_smile_elasticsuite_catalog_optimizer_optimizer_edit">
        <observer name="restrain_optimizer_action" instance="Smile\ElasticsuiteAbCampaign\Observer\RestrainOptimizerActions" />
    </event>
    <event name="controller_action_predispatch_smile_elasticsuite_catalog_optimizer_optimizer_delete">
        <observer name="restrain_optimizer_action" instance="Smile\ElasticsuiteAbCampaign\Observer\RestrainOptimizerActions" />
    </event>
</config>
