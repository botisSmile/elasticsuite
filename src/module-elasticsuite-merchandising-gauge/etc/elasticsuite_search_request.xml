            <provider name="viewsSalesMetricsProvider">\Smile\ElasticsuiteMerchandisingGauge\Search\Request\Product\Aggregation\Provider\MerchandisingMetricsProvider</provider>
        </aggregations>
    </request>

    <request name="category_search_container" label="Catalog Category Search" index="catalog_category" type="category" fulltext="true">
        <aggregations>
            <provider name="viewsSalesMetricsProvider">\Smile\ElasticsuiteMerchandisingGauge\Search\Request\Product\Aggregation\Provider\MerchandisingMetricsProvider</provider>
