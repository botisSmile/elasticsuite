            <argument name="itemFactory" xsi:type="object">Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Terms\ItemFactory</argument>
            <argument name="allowFallback" xsi:type="boolean">false</argument>
        </arguments>
    </virtualType>

    <preference for="Smile\ElasticsuiteCore\Model\Autocomplete\Terms\DataProvider"
                type="Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Terms\DataProvider"/>
