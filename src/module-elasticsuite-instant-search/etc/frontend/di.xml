<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Smile\ElasticsuiteCatalog\Model\Autocomplete\Product\DataProvider"
                type="Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Product\DataProvider"/>

    <preference for="Smile\ElasticsuiteCatalog\Model\Autocomplete\Category\DataProvider"
                type="Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Category\DataProvider"/>

    <preference for="Smile\ElasticsuiteCatalog\Model\Autocomplete\Product\Attribute\DataProvider"
                type="Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Product\Attribute\DataProvider"/>

    <virtualType name="Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Terms\DataProvider"
                 type="Smile\ElasticsuiteBehavioralAutocomplete\Model\Autocomplete\Terms\DataProvider">
