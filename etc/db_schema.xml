<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="smile_elasticsuite_optimizer_customersegment" resource="default" engine="innodb"
           comment="Search optimizer Customersegment Table">
        <column xsi:type="int" name="optimizer_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Optimizer ID"/>
        <column xsi:type="int" name="segment_id" padding="10" unsigned="true" nullable="false" identity="false"
