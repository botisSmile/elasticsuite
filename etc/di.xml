<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\FrontControllerInterface">
        <plugin name="front-controller-fast-dispatch" type="Smile\ElasticsuiteInstantSearch\Plugin\FrontController\DispatchPlugin"/>
    </type>

    <type name="Smile\ElasticsuiteInstantSearch\Plugin\FrontController\DispatchPlugin">
        <arguments>
            <argument name="thumbnailHelper" xsi:type="object">\Smile\ElasticsuiteInstantSearch\Model\Autocomplete\Product\ThumbnailHelper\Proxy</argument>
        </arguments>
    </type>

    <!-- Datasources resolver -->
    <type name="Smile\ElasticsuiteCore\Index\DataSourceResolver">
        <arguments>
            <argument name="datasources" xsi:type="array">
                <item name="catalog_category" xsi:type="array">
                    <item name="tree" xsi:type="object">Smile\ElasticsuiteInstantSearch\Model\Category\Indexer\Fulltext\Datasource\TreeData</item>
                </item>
            </argument>
        </arguments>
    </type>

