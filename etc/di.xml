<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Smile\ElasticsuiteCore\Index\DataSourceResolver">
        <arguments>
            <argument name="datasources" xsi:type="array">
                <item name="catalog_product" xsi:type="array">
                    <item name="behavioral_data" xsi:type="object">Smile\ElasticsuiteBehavioralData\Model\Product\Indexer\Fulltext\Datasource\BehavioralData</item>
                </item>
            </argument>
        </arguments>
    </type>

    <virtualType name="movingFunctionPipelineFactory" type="Smile\ElasticsuiteBehavioralData\Search\Request\Aggregation\Pipeline\MovingFunctionFactory" />
    <type name="Smile\ElasticsuiteCore\Search\Request\Aggregation\PipelineFactory">
        <arguments>
            <argument name="factories" xsi:type="array">
                <item name="movingFunctionPipeline" xsi:type="object">movingFunctionPipelineFactory</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="reverseNestedBucketFactory" type="Smile\ElasticsuiteBehavioralData\Search\Request\Aggregation\Bucket\ReverseNestedFactory" />

    <type name="Smile\ElasticsuiteCore\Search\Request\Aggregation\AggregationFactory">
        <arguments>
            <argument name="factories" xsi:type="array">
                <item name="reverseNestedBucket" xsi:type="object">reverseNestedBucketFactory</item>
            </argument>
        </arguments>
    </type>

    <type name="Smile\ElasticsuiteCore\Search\Adapter\Elasticsuite\Request\Aggregation\Builder">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="reverseNestedBucket" xsi:type="object">Smile\ElasticsuiteBehavioralData\Search\Adapter\Elasticsuite\Request\Aggregation\Builder\ReverseNested\Proxy</item>
            </argument>
            <argument name="pipelineBuilders" xsi:type="array">
                <item name="movingFunctionPipeline" xsi:type="object">Smile\ElasticsuiteBehavioralData\Search\Adapter\Elasticsuite\Request\Aggregation\PipelineBuilder\MovingFunction\Proxy</item>
            </argument>
        </arguments>
    </type>

</config>
